{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "allowJs": true,
    "checkJs": false
  },
  "exclude": [
    "node_modules",
    "**/firebase/**",
    "**/firebase.ts",
    "**/Login.ts",
    "**/login.ts",
    "**/firebase.json",
    "firebase.json",
    "**/*.test.ts"
  ],
  "include": ["src/**/*"]
}
